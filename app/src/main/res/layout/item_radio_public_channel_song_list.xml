<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_public_channel_radio_item">

        <ImageView
            android:id="@+id/song_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_more_btn"
            android:layout_toRightOf="@+id/song_image"
            android:orientation="vertical">

            <com.jushi.muisc.chat.common.view.JSTextView
                android:id="@+id/song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:textSize="@dimen/_16sp" />

            <com.jushi.muisc.chat.common.view.JSTextView
                android:id="@+id/artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/_999999"
                android:textSize="@dimen/_13sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/more_three_point_icon"
            android:tint="@color/_999999" />

    </RelativeLayout>

</LinearLayout>