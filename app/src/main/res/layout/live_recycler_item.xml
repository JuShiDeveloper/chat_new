<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/live_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/live_image_info_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:alpha="0.4"
            android:background="@drawable/right_top_back"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zhibo_icon" />

            <com.jushi.muisc.chat.view.JSTextView
                android:id="@+id/live_people_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp" />

        </LinearLayout>

    </RelativeLayout>

    <com.jushi.muisc.chat.view.JSTextView
        android:id="@+id/live_nickName_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        android:textSize="@dimen/_16sp"
        android:textColor="@color/_333333"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>