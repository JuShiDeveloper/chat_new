<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view_layout"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/corners_drawable"
    android:elevation="3dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5">

        <ImageView
            android:id="@+id/chart_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <com.jushi.muisc.chat.view.JSTextView
            android:id="@+id/chart_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_18sp" />

        <com.jushi.muisc.chat.view.JSTextView
            android:id="@+id/chart_music_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/_666666"
            android:textSize="@dimen/_15sp" />

        <com.jushi.muisc.chat.view.JSTextView
            android:id="@+id/chart_music_title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/_666666"
            android:textSize="@dimen/_15sp" />

        <com.jushi.muisc.chat.view.JSTextView
            android:id="@+id/chart_music_title_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/_666666"
            android:textSize="@dimen/_15sp" />

    </LinearLayout>

</LinearLayout>