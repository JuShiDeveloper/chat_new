<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_home_page_recommend_item"
        android:padding="5dp">

        <ImageView
            android:id="@+id/home_page_recommend_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/home_page_recommend_image"
            android:orientation="vertical">

            <com.jushi.muisc.chat.common.view.JSTextView
                android:id="@+id/home_page_recommend_songName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/_333333"
                android:textSize="@dimen/_15sp" />

            <com.jushi.muisc.chat.common.view.JSTextView
                android:id="@+id/home_page_recommend_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/_666666"
                android:textSize="@dimen/_12sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>