<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_EFEFEF"
    tools:context=".friends.my.MyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--显示用户头像和名称-->
        <RelativeLayout
            android:id="@+id/rl_userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp"
            android:background="@color/c_ffffff"
            android:paddingBottom="5dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="5dp">

            <com.jushi.muisc.chat.common.view.JSTextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:textColor="@color/c_001208"
                android:textSize="@dimen/_18sp" />

            <ImageView
                android:id="@+id/iv_userImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp" />

        </RelativeLayout>

        <com.jushi.muisc.chat.common.view.JSTextView
            android:id="@+id/tv_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/c_ffffff"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/setting_icon"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="@string/settings"
            android:textColor="@color/c_001208"
            android:textSize="@dimen/_18sp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>