<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/song_list_tips_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:orientation="horizontal">

        <com.jushi.muisc.chat.view.JSTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_play_list"
            android:textColor="@color/c_001208"
            android:textSize="@dimen/_16sp" />

        <com.jushi.muisc.chat.view.JSTextView
            android:id="@+id/tv_song_list_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/e80b0b"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/song_list_recyclerView"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="250dp" />

</LinearLayout>